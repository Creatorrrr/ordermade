<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<properties resource="dataSource.properties"></properties>

	<typeAliases>
		<!-- write typeAlias -->
		<!-- <typeAlias type="ordermade.domain.ProductPage" alias="ProductPage" 
			/> -->
		<typeAlias type="ordermade.domain.Member" alias="Member" />
		<typeAlias type="ordermade.domain.Tag" alias="Tag" />
		<typeAlias type="ordermade.domain.Category" alias="Category" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<!-- <mapper resource="mapper/ProductPageMapper.xml" /> -->
		<mapper resource="mapper/MemberMapper.xml" />
		<mapper resource="mapper/TagMapper.xml" />
		<!-- <mapper resource="mapper/CategoryMapper.xml" /> -->
	</mappers>
</configuration>